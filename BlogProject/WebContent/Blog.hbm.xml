<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.brsu.java.training.logic">
	<class name="Blog" table="blogs">
		<id name="id" column="blog_id" type="java.lang.Long">
			<generator class="increment" />
		</id>

		<property name="title" column="title" type="java.lang.String" />
		<property name="date" column="date" type="java.util.date" />

		<set name="articles" table="articles" lazy="false">
			<key column="blog_id" />
			<many-to-many class="Article" column="article_id" />
		</set>
	</class>
</hibernate-mapping>