<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.brsu.java.training.entity">
	<class name="User" table="users">
		<id name="id" column="user_id">
			<generator class="increment" />
		</id>

		<property name="name" column="name" type="string" />
		<property name="password" column="password" type="string" />
		<property name="date" column="date" type="timestamp" />
		<property name="about" column="about" type="text" />
		<property name="moderator" column="moderator" type="boolean" />
		<property name="banned" column="banned" type="boolean" />

		<set name="blogs" cascade="all" lazy="true">
			<key column="user_id" not-null="true"/>
			<one-to-many class="Blog" />
		</set>
	</class>

</hibernate-mapping>