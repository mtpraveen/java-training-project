<flowers>
	<flower name="rose" soil="grount" origin="europe">
		<visual_parameters>
			<stem_colour>green</stem_colour>
			<leafs_colour>red</leafs_colour>
			<ave_size>1</ave_size>
		</visual_parameters>
		<growing_tips>
			<temperature>25</temperature>
			<lighting>photophilous</lighting>
			<watering>1000</watering>
		</growing_tips>
		<multiplying>cuttings</multiplying>
	</flower>
	
	<flower name="sunflower" soil="podzol" origin="asia">
		<visual_parameters>
			<stem_colour>green</stem_colour>
			<leafs_colour>yellow</leafs_colour>
			<ave_size>1.5</ave_size>
		</visual_parameters>
		<growing_tips>
			<temperature>30</temperature>
			<lighting>photophilous</lighting>
			<watering>5000</watering>
		</growing_tips>
		<multiplying>seeds</multiplying>
	</flower>	
	
	<flower name="lilium" soil="sod-podzol" origin="europe">
		<visual_parameters>
			<stem_colour>lime</stem_colour>
			<leafs_colour>lime</leafs_colour>
			<ave_size>0.5</ave_size>
		</visual_parameters>
		<growing_tips>
			<temperature>20</temperature>
			<lighting>non photophilous</lighting>
			<watering>3000</watering>
		</growing_tips>
		<multiplying>leafs</multiplying>
	</flower>
</flowers>
